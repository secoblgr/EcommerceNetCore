@{
    Layout = null;
}
@using System.Web
<head>
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://unpkg.com/bs-brain@2.0.4/components/logins/login-7/assets/css/login-7.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"> <!-- Bu satır eklendi -->
</head>
<body class="bg-light">
    <!-- Sol üst köşede geri butonu -->
    <a href="@Url.Action("Index", "Home")"
       class="position-absolute top-0 start-0 m-4 text-decoration-none text-secondary p-2 ">
        <i class="bi bi-arrow-left-circle fs-1 text-primary "></i>
    </a>
    <!-- Login 7 - Bootstrap Brain Component -->
    <section class="bg-light p-3 p-md-4 p-xl-5 min-vh-100 d-flex align-items-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
                    <div class="card border border-light-subtle rounded-4 shadow">
                        <div class="card-body p-3 p-md-4 p-xl-5 pt-5">
                            <div class="row">
                                <div class="col-12">
                                    <div class="mb-5">
                                        <h4 class="text-center">LOG IN</h4>
                                    </div>
                                </div>
                            </div>
                            <form action="@Url.Action("Login","Account")" method="post">
                                <div class="row gy-3 overflow-hidden">
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required>
                                            <label for="email" class="form-label">Email</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
                                            <label for="password" class="form-label">Password</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="d-grid">
                                            <button class="btn bsb-btn-xl btn-primary" type="submit">LOGIN</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <div class="row mt-2">
                                <div class="col-12">
                                    <div class="d-flex justify-content-between mt-2">
                                        <a href="#" class="link-secondary text-decoration-none">Forgot password?</a>
                                        <a href="@Url.Action("Register","Account")" class="link-secondary text-decoration-none">Create new account</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @if (ViewBag.value != null)
        {
            <div class="position-fixed top-0 end-0 p-3" style="z-index: 1055;" id="customAlert">
                <div class="alert alert-danger alert-dismissible fade show shadow" role="alert">
                    @ViewBag.value
                </div>
            </div>
        }
    </section>
</body>
<script>
    setTimeout(function () {
           var alertDiv = document.getElementById('customAlert');
           if (alertDiv) {
              alertDiv.style.display = 'none';
              }
           }, 2000);
</script>
